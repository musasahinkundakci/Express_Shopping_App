extends ../layouts/main-layout

block content 
    form(action="/admin/add-category" method="POST")
            input(type="hidden" name="_csrf" value=`${csrfToken}`)
            .form-group.row
              label(for="name").col-sm-2.col-form-label Category Name
              .col-sm-10
                input(type="text" name="name" required).form-control
            .form-group.row
              label(for="description").col-sm-2.col-form-label Description
              .col-sm-10
                textarea( cols="30", rows="10" name="description" required).form-control

            .form-group.row

              .col-sm-10.offset-sm-2
                input(type="submit" name="" value="Save Category").btn.btn-primary