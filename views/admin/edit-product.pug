extends ../layouts/main-layout

block content 
          form(action="/admin/edit-product" method="POST" encType="multipart/form-data")
            input(type="hidden" name="_csrf" value=`${csrfToken}`)
            input(type="hidden" name="_id" value=`${product._id}`)
            .form-group.row
              label(for="name").col-sm-2.col-form-label Product Name
              .col-sm-10
                input(type="text" name="name" value=`${product.name}` required).form-control#productName

            .form-group.row
              label(for="price").col-sm-2.col-form-label Price
              .col-sm-10
                input(type="text" name="price" value=`${product.price}` required).form-control#productName

            .form-group.row
              label(for="image").col-sm-2.col-form-label Image
              .col-sm-10
                img(src=`/img/${product.image}` width="100" alt="")
                input(type="file" name="image"  value=`${inputs ? inputs.image : ""}`)
              label(for="categoryids").col-sm-2.col-form-label Category
              .col-sm-10
                each category in categories 
                  input(type="checkbox" name="categoryids" value=`${category._id}` checked=category.selected) 
                  |  #{category.name}
                  br
            .form-group.row
              label(for="description").col-sm-2.col-form-label Description
              .col-sm-10
                textarea( cols="30", rows="10" name="description" required).form-control#productName #{product.description}               
                
              
            
            .form-group.row
             
              .col-sm-10.offset-sm-2
                input(type="submit" name="" value="Save Product").btn.btn-primary