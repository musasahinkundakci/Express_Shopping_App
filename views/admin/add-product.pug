extends ../layouts/main-layout

block content
          if errorMessage 
            div.alert.alert-danger !{errorMessage}
          form(action="/admin/add-product" method="POST" encType="multipart/form-data")
            
            .form-group.row
              input(type="hidden" name="_csrf" value=`${csrfToken}`)
              label(for="name").col-sm-2.col-form-label Product Name
              .col-sm-10
                
                input(type="text" name="name" value=`${inputs ? inputs.name : ""}`).form-control#productName

            .form-group.row
              label(for="price").col-sm-2.col-form-label Price
              .col-sm-10
                input(type="text" name="price" value=`${inputs ? inputs.price : ""}` ).form-control#productName

            .form-group.row
              label(for="image").col-sm-2.col-form-label Image
              .col-sm-10
                input(type="file" name="image"  value=`${inputs ? inputs.image : ""}`).form-control-file#productName
            //- .form-group.row
            //-   label(for="categoryid").col-sm-2.col-form-label Category
            //-   .col-sm-10
            //-     select.form-control#categoryId(name="categoryid")
            //-       option(value="-1") Select Category
            //-       each category in categories
            //-         option(value=category.id) #{category.name}
            .form-group.row
              label(for="description").col-sm-2.col-form-label Description
              .col-sm-10
                textarea(cols="30", rows="10" name="description" value=`${inputs ? inputs.description : ""}`).form-control#editor


           
            .form-group.row

              .col-sm-10.offset-sm-2
                input(type="submit" name="" value="Save Product").btn.btn-primary
block script 
  script(src="https://cdn.ckeditor.com/ckeditor5/28.0.0/classic/ckeditor.js") 
  script(src="/js/script.js") 